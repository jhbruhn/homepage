RewriteRule ^rss/(.*) http://blog.jhbruhn.de/rss/$1 [R=301,L]
RewriteRule ^rss(.*) http://blog.jhbruhn.de/rss/$1 [R=301,L]
RewriteRule ^btsync-auf-nem-uberspace/(.*) http://blog.jhbruhn.de/btsync-auf-nem-uberspace/$1 [R=301,L]
